#!/usr/bin/env zsh

#____________________//Personal restore script for//___________________________#
#______      ______                                           _           _____#
#_____      / ____ \________ _   ______ ___  ____  __________(_)____       ____#
#____      / / __ `/ ___/ _ \ | / / __ `__ \/ __ \/ ___/ ___/ / ___/      _____#
#___      / / /_/ (__  )  __/ |/ / / / / / / /_/ / /  / /  / (__  )      ______#
#____     \ \__,_/____/\___/|___/_/ /_/ /_/\____/_/  /_/  /_/____/      _______#
#_____     \____/                                                      ________#
#______________________________________________________________________________#

                #@@@@@@@^^~~~~~~~~~~~~~~~~~~~~^@@@@@@@@@#
                #@@@@@@^     ~^  @  @@ @ @ @ I  ~^@@@@@@#
                #@@@@@            ~ ~~ ~I          @@@@@#
                #@@@@'                  '  _,w@<    @@@@#
                #@@@@     @@@@@@@@w___,w@@@@@@@@  @  @@@#
                #@@@@     @@@@@@@@@@@@@@@@@@@@@@  I  @@@#
                #@@@@     @@@@@@@@@@@@@@@@@@@@*@[ i  @@@#
                #@@@@     @@@@@@@@@@@@@@@@@@@@[][ | ]@@@#
                #@@@@     ~_,,_ ~@@@@@@@~ ____~ @    @@@#
                #@@@@    _~ ,  ,  `@@@~  _  _`@ ]L  J@@@#
                #@@@@  , @@w@ww+   @@@ww``,,@w@ ][  @@@@#
                #@@@@,  @@@@www@@@ @@@@@@@ww@@@@@[  @@@@#
                #@@@@@_|| @@@@@@P' @@P@@@@@@@@@@@[|c@@@@#
                #@@@@@@w| '@@P~  P]@@@-~, ~Y@@^'],@@@@@@#
                #@@@@@@@[   _        _J@@Tk     ]]@@@@@@#
                #@@@@@@@@,@ @@, c,,,,,,,y ,w@@[ ,@@@@@@@#
                #@@@@@@@@@ i @w   ====--_@@@@@  @@@@@@@@#
                #@@@@@@@@@@`,P~ _ ~^^^^Y@@@@@  @@@@@@@@@#
                #@@@@^^=^@@^   ^' ,ww,w@@@@@ _@@@@@@@@@@#
                #@@@_xJ~ ~   ,    @@@@@@@P~_@@@@@@@@@@@@#
                #@@   @,   ,@@@,_____   _,J@@@@@@@@@@@@@#
                #@@L  `' ,@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@#
                #@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@#

bold=$(tput bold)
yellow=$(tput setaf 3)
reset=$(tput sgr0)

# Just a bold yellow arrow
arrow() {
  echo "${yellow}${bold}>>> ${reset}$*"
}

#-------------------------------------------------------------------------------
echo "Running restore script" && echo
sleep 1

#-------------------------------------------------------------------------------
echo && arrow "Restoring to ${yellow}~/Library/Saved Application State${reset}" && echo
sleep 1

sudo rsync -av ~/.backup/Saved\ Application\ State/ ~/Library/Saved\ Application\ State/

#-------------------------------------------------------------------------------
echo && arrow "Restoring ${yellow}~/Library/Preferences${reset}" && echo
sleep 1

sudo rsync -av ~/.backup/Preferences/ ~/Library/Preferences/

echo "${yellow}${bold}Restore succesful${reset}"
